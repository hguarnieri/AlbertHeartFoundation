<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffdd1c24"
    android:weightSum="1">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffe91c23"
        android:columnCount="13"
        android:layout_weight="1">

        <ImageView
            android:layout_width="129dp"
            android:layout_height="129dp"
            android:id="@+id/imageView"
            android:layout_row="23"
            android:layout_column="4"
            android:src="@drawable/logo"/>

        <Spinner
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_gender"
            android:layout_row="23"
            android:layout_column="5" />

        <Spinner
            android:layout_width="223dp"
            android:layout_height="96dp"
            android:id="@+id/spinner_age"
            android:layout_row="23"
            android:layout_column="6"
            android:spinnerMode="dropdown" />

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="644dp"
            android:layout_row="24"
            android:layout_column="4"
            android:layout_columnSpan="3"/>

        <Button
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:id="@+id/btn_signup_button"
            android:layout_row="27"
            android:layout_column="4"
            android:layout_weight="0.40" />

        <Button
            android:layout_width="237dp"
            android:layout_height="wrap_content"
            android:text="Donate"
            android:id="@+id/btn_donate_button"
            android:layout_row="27"
            android:layout_column="6"
            android:layout_weight="0.40" />

    </GridLayout>

</LinearLayout>
