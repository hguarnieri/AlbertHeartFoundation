<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Donate"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="32sp"
            android:text="Amount"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:layout_alignParentRight="true"
            android:text="$ 60.00"
            android:id="@+id/txt_amount_final" />

    </RelativeLayout>

    <ListView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="590dp"
        android:id="@+id/list_item_values"
        android:entries="@array/donation_values">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_weight="0.4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or type an amount:"
            android:textSize="32sp"/>

        <EditText
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="32sp"
            android:id="@+id/txt_new_amount"
            android:inputType="numberDecimal"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_green"
            android:id="@+id/button_set_amount"
            android:text="Set"
            android:textColor="#fff"
            android:layout_marginLeft="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_red"
            android:id="@+id/button_cancel_donation"
            android:text="Cancel"
            android:textColor="#fff"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp"
            android:layout_weight="5"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_green"
            android:id="@+id/button_donate"
            android:text="Donate"
            android:textColor="#fff"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="5"/>

    </LinearLayout>

</LinearLayout>
